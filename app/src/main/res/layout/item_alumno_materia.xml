<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvItemAlumnoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alumno"
            android:textColor="@color/colorAzul"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvItemMateriaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Materia"
            android:textColor="@color/colorGuindo"
            android:textSize="14sp"
            android:paddingTop="3dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditarAsignacion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Editar"
        android:tint="@color/colorAzul"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEliminarAsignacion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Eliminar"
        android:tint="@color/colorGuindo"/>
</LinearLayout>
